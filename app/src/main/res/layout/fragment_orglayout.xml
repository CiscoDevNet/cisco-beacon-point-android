<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/orgLinearLayout"
    android:background="@color/colorWhite">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:padding="7dp"
        android:text="Floor Plan Demo"
        android:background="@color/colorAddVenueBg"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorWhite"
        android:id="@+id/showFloorPlanButton" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="7dp"
        android:layout_gravity="center_horizontal"
        android:text="Virtual beacon notification"
        android:background="@color/colorAddVenueBg"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorWhite"
        android:id="@+id/showvBeaconsButton" />
</LinearLayout>